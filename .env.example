# Application
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1
APP_NAME=PersonX AI Assistant

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
POSTGRES_USER=personx
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=personx_ai

# Database URL (constructed from above)
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# LLM (Local / Free via Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# LLM Configuration
DEFAULT_LLM_MODEL=llama3.1:8b
DEFAULT_MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.7

# Vector Database (Pinecone) - For Phase 2
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=personx-knowledge

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Embeddings (Local / Free)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# Monitoring (Optional - for later)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=personx-ai
SENTRY_DSN=
